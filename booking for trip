def goa():
    print(" goa package is 10 k per person")
    var=input(" do you want to book this package: ")
    if var == "yes":
        per_person=10000
        fullname=input("enter you full name: ")
        age=int(input("enter your age: "))
        number_of_persons=int(input("enter number of persons: "))
        total_amount=per_person*number_of_persons
        if total_amount>=50000:
            offer_total_amount=total_amount-5000
            print(f" hi {fullname} you're booked goa trip your bill is more than 50k so 5000 less and you have to pay total amount is {offer_total_amount}")
        print(f" hi {fullname} you're booked goa trip and you have to pay total amount is {total_amount}")
    
    else:
        print("thank you")

